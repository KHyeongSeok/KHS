<Window x:Class="WPF250523_03_BMI계산기.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF250523_03_BMI계산기"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label Width="100" Content="키(cm)"/>
            <TextBox Name="txtHeight" Width="150"></TextBox>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label Width="100" Content="체중(kg)"/>
            <TextBox Name="txtWeight" Width="150"></TextBox>
        </StackPanel>
        <StackPanel Margin="10">
            <Button Name="btnBMI" Height="30" Width="100" Margin="110, 10, 10, 10"
                    Click="btnBMI_Click">BMI 계산 하기</Button>
            <Label Name="lblResult" Margin="10" Width="250">결과는 : </Label>
        </StackPanel>
    </StackPanel>
</Window>
